<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/window_background_texture" >

    <RelativeLayout
        android:id="@+id/about_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg"
        android:paddingLeft="15dp"
        android:paddingRight="20dp" >

        <ImageView
            android:id="@+id/about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_left_arrow_in_dealmap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=" 关于"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_black" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_title"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg12"
                android:maxEms="18"
                android:text="QuickLife（快来）Android版适用于Android2.1以上固件，如在其他手机系统上使用本软件，对于出现的任何问题，本人不承担任何责任。"
                android:textColor="@color/text_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg12"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="版本：QuickLife（Android）1.0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg12"
                android:padding="15dp"
                android:text="版权所有：2013 卓跃"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg12"
                android:padding="15dp"
                android:text="作者：陈逢俊"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/text_black" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>