<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/main_checkin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/main_checkin_title_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/exit_btn_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="设置"
            android:textColor="@color/color_list_tab_txt"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/main_checkin_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_checkin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/main_checkin_title_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_checkin_title"
        android:layout_centerHorizontal="true"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="搜索你想推荐的商户"
        android:paddingLeft="50dp" >

    </EditText>

    <TextView
        android:id="@+id/list_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/main_checkin_title_et"
        android:background="@drawable/status_bar_close_on"
        android:padding="10dp"
        android:text="附近你想推荐的商户"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_black"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/checkin_listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/list_tv_name"
        android:cacheColorHint="#00000000"
        android:divider="#01ffffff"
        android:dividerHeight="10dp"
        android:listSelector="@drawable/list_bg_selector"
        android:padding="5dp" >

    </ListView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/main_checkin_title_et"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_btn_search" />

</RelativeLayout>