<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/window_background_texture" >

    <RelativeLayout
        android:id="@+id/detail_checkin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg"
        android:paddingLeft="15dp"
        android:paddingRight="20dp" >

        <ImageView
            android:id="@+id/detail_checkin_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_left_arrow_in_dealmap" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/title_checkin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_black" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_checkin_btn_checkin"
        android:layout_below="@+id/detail_checkin_title"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg12"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/detail_checkin_tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/detail_checkin_tv_t"
                    android:layout_alignBottom="@+id/detail_checkin_tv_t"
                    android:layout_toRightOf="@+id/detail_checkin_tv_t"
                    android:text="TextView"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/detail_checkin_tv_dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/detail_checkin_tv_dis"
                    android:layout_alignBottom="@+id/detail_checkin_tv_dis"
                    android:layout_toRightOf="@+id/detail_checkin_tv_dis"
                    android:text="TextView"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/detail_checkin_tv_pinfen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/detail_checkin_iv_logo"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/detail_checkin_iv_logo"
                    android:padding="5dp"
                    android:text="评分： " />

                <TextView
                    android:id="@+id/detail_checkin_tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/detail_checkin_tv_pinfen"
                    android:layout_alignBottom="@+id/detail_checkin_tv_pinfen"
                    android:layout_toRightOf="@+id/detail_checkin_tv_pinfen"
                    android:text="TextView"
                    android:textColor="@color/text_black" />

                <TextView
                    android:id="@+id/detail_checkin_tv_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/detail_checkin_tv_pinfen"
                    android:layout_below="@+id/detail_checkin_tv_pinfen"
                    android:padding="5dp"
                    android:text="类型： "
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/detail_checkin_tv_dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/detail_checkin_tv_t"
                    android:layout_below="@+id/detail_checkin_tv_t"
                    android:padding="5dp"
                    android:text="距离： " />

                <ImageView
                    android:id="@+id/detail_checkin_iv_favoirite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:padding="8dp"
                    android:src="@drawable/icon_favorit_selector" />

                <ImageView
                    android:id="@+id/detail_checkin_iv_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/detail_checkin_iv_favoirite"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/img_hotapp_default" />

                <TextView
                    android:id="@+id/detail_checkin_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/detail_checkin_iv_favoirite"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:text="商家名称"
                    android:textColor="@color/text_black"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg12"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:text="详细地址："
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/detail_checkin_tv_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView5"
                    android:padding="10dp"
                    android:text="TextView"
                    android:textColor="@color/text_black" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:src="@drawable/map_btn_bg_selector" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="用户评论："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:id="@+id/detail_checkin_lineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="暂无用户评论"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/detail_checkin_btn_checkin"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/exit_btn_selector"
        android:padding="10dp"
        android:text="签到"
        android:textColor="@color/color_list_tab_txt" />

    <ImageView
        android:id="@+id/detail_checkin_favorite_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_flaying_favorite"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/detail_checkin_progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</RelativeLayout>