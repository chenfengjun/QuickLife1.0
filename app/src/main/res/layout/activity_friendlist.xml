<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bookinginfo_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/friends_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的好友"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_black" />

        <Button
            android:id="@+id/friends_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/exit_btn_selector"
            android:padding="10dp"
            android:text="添加"
            android:textColor="@color/color_list_tab_txt" />

    </RelativeLayout>

    <ListView
        android:id="@+id/friends_listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/friends_title"
        android:cacheColorHint="#00000000"
        android:listSelector="@drawable/list_bg" >

    </ListView>

</RelativeLayout>