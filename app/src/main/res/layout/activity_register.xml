<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/booking_list_highlight_bg" >

    <RelativeLayout
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg"
        android:paddingLeft="15dp"
        android:paddingRight="20dp" >

        <ImageView
            android:id="@+id/register_title_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_left_arrow_in_dealmap" />

        <TextView
            android:id="@+id/register_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="快速注册"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_rel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:padding="15dp" >

        <EditText
            android:id="@+id/register_et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="输入用户名"
            android:inputType="textEmailAddress"
            android:paddingLeft="50dp" >
        </EditText>

        <EditText
            android:id="@+id/register_et_myname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_et_name"
            android:ems="10"
            android:hint="输入姓名"
            android:inputType="textPersonName"
            android:paddingLeft="50dp" >

        </EditText>

        <EditText
            android:id="@+id/register_et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_et_myname"
            android:ems="10"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:paddingLeft="50dp" />

        <TextView
            android:id="@+id/register_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_et_name"
            android:layout_alignBottom="@+id/register_et_name"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="@string/login_name"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/register_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_et_pwd"
            android:layout_alignBottom="@+id/register_et_pwd"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="@string/login_pwd"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/register_et_pwd"
            android:layout_alignRight="@+id/register_et_pwd"
            android:layout_below="@+id/register_et_pwd"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/register_registerBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/exit_btn_selector"
                android:padding="10dp"
                android:text="注册"
                android:textColor="@color/color_list_tab_txt" />

            <Button
                android:id="@+id/register_backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/exit_btn_selector"
                android:padding="10dp"
                android:text="返回"
                android:textColor="@color/color_list_tab_txt" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/register_et_myname"
            android:layout_alignBottom="@+id/register_et_myname"
            android:layout_alignLeft="@+id/register_et_myname"
            android:layout_marginLeft="5dp"
            android:text="姓名:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

</RelativeLayout>