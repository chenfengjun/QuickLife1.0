<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/access_titlebar_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/menu_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/access_titlebar_bg"
        android:gravity="center_horizontal"
        android:text="系统设置"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#f8031a"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="绑定手机"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_list_tab_txt"
            android:textSize="20sp" />

        <Button
            android:id="@+id/menu_bindPhone_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="修改" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="是否打开GPS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_list_tab_txt"
            android:textSize="20sp" />

        <Button
            android:id="@+id/menu_gps_set"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="设置" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="是否公开自己的位置"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_list_tab_txt"
            android:textSize="20sp" />

        <ToggleButton
            android:id="@+id/menu_tb_myLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_list_tab_txt"
            android:textSize="20sp" />

        <Button
            android:id="@+id/menu_pwd_set"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="设置" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ToggleButton
            android:id="@+id/menu_tb_shark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checked="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="摇一摇刷新动态"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/color_list_tab_txt"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/menu_tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_content_item_bg_selector"
        android:clickable="true"
        android:padding="10dp"
        android:text="关于我们"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/color_list_tab_txt"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/menu_btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/exit_btn_selector"
            android:padding="10dp"
            android:text="退出"
            android:textColor="@color/color_list_tab_txt"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>