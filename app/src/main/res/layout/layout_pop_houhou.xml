<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/message_bubble_in_bg_p"
    android:orientation="vertical"
    android:padding="15dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp" >

        <Button
            android:id="@+id/houhou_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_btn_selector"
            android:padding="10dp"
            android:text="分享"
            android:textColor="@color/color_list_tab_txt" />

        <Button
            android:id="@+id/houbou_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/exit_btn_selector"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/color_list_tab_txt" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:text="亲！如果您感觉不错就\n分享给你的好友吧！"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_black" />

</RelativeLayout>