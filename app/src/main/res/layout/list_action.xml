<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/message_bubble_out_bg_p"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/list_action_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_default_profile" />

    <TextView
        android:id="@+id/list_action_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_action_head"
        android:layout_toRightOf="@+id/list_action_head"
        android:text="人物"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_text_selector" />

    <TextView
        android:id="@+id/list_action_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_action_head"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/list_action_head"
        android:text="时间"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/list_text_selector" />

    <TextView
        android:id="@+id/list_action_buss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="地点"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_text_selector" />

    <TextView
        android:id="@+id/list_action_actype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_action_buss"
        android:layout_alignBottom="@+id/list_action_buss"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/list_action_buss"
        android:text="事件"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_text_selector" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_action_head"
        android:layout_below="@+id/list_action_head"
        android:layout_marginTop="10dp"
        android:text="在"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_text_selector" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/list_action_buss"
        android:layout_marginTop="5dp"
        android:text="评论："
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_text_selector"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/list_action_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/list_action_user"
        android:layout_below="@+id/textView1"
        android:text="无"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_text_selector" />

</RelativeLayout>