<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg12"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/list_coupons_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_logo_s" />

    <TextView
        android:id="@+id/list_coupons_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/list_coupons_image"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_text_selector" />

    <TextView
        android:id="@+id/list_coupons_buss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_coupons_image"
        android:layout_alignLeft="@+id/list_coupons_name"
        android:layout_toLeftOf="@+id/list_coupons_type"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/list_text_selector" />

    <TextView
        android:id="@+id/list_coupons_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_coupons_buss"
        android:layout_alignBottom="@+id/list_coupons_buss"
        android:layout_alignParentRight="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/list_text_selector" />

</RelativeLayout>